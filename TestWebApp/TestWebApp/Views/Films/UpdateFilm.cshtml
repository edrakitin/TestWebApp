@model TestWebApp.Models.CreateViewModel

@{
    ViewData["Title"] = "UpdateFilm";
}

<h1>Обновление данных</h1>

<div>
    <button class="btnAccept btnFixed" onclick="location.href='@Url.Action("Index", "Films")'">Вернутся</button>
</div>

<form enctype="multipart/form-data" asp-controller="films" asp-action="updateFilm"
      method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Название">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" placeholder="Описание">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ReleaseYear" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ReleaseYear" class="form-control" placeholder="Дата релиза">
            <span asp-validation-for="ReleaseYear" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Director" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Director" class="form-control" placeholder="Режиссер">
            <span asp-validation-for="Director" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Poster" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Poster" class="form-control custom-file-input" accept="image/jpeg">
                <label class="custom-file-label">Выберите файл...</label>
            </div>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Обновить</button>
        </div>
    </div>

    <input asp-for="FilmId" type="hidden" />


    @section Scripts {
        <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
        </script>
    }
</form>

